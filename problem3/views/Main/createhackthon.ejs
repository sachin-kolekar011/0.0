<%layout("layout/boilerplate")%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Hackathon</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
        body {
            background: linear-gradient(135deg, #6e8efb, #a777e3);
            color: white;
            font-family: 'Poppins', sans-serif;
        }
        .container {
            max-width: 600px;
            margin: 50px auto;
            background: rgba(255, 255, 255, 0.1);
            padding: 30px;
            border-radius: 10px;
            backdrop-filter: blur(10px);
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        }
        .form-control, .btn {
            border-radius: 8px;
        }
        .btn-primary {
            background: #ff6b6b;
            border: none;
        }
        .btn-primary:hover {
            background: #ff4757;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2 class="text-center">Create a Hackathon</h2>
        <form id="hackathonForm" action="/hackthon/createhackthon" method="POST">
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input name="title" type="text" class="form-control" id="title" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea name="description" class="form-control" id="description" required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Start Date</label>
                <input name="startDate" type="date" class="form-control" id="startDate" required>
            </div>
            <div class="mb-3">
                <label class="form-label">End Date</label>
                <input name="endDate" type="date" class="form-control" id="endDate" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Location</label>
                <input name="location" type="text" class="form-control" id="location">
            </div>
            <div class="mb-3">
                <label class="form-label">Prize Pool</label>
                <input name="prizePool" type="number" class="form-control" id="prizePool">
            </div>
            <div class="mb-3">
                <label class="form-label">Categories (Comma-separated)</label>
                <input name="categories" type="text" class="form-control" id="categories">
            </div>
            <div class="mb-3">
                <label class="form-label">Rules (Comma-separated)</label>
                <input name="rules" type="text" class="form-control" id="rules">
            </div>
            <div class="mb-3">
                <label class="form-label">Max Team Size</label>
                <input name="maxTeamSize" type="number" class="form-control" id="maxTeamSize" value="4">
            </div>
            <button type="submit" class="btn btn-primary w-100">Create Hackathon</button>
        </form>
    </div>

   
</body>
</html>
