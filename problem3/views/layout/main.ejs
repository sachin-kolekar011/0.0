        /* General body styles */
body {
    background-image: url('https://img.freepik.com/free-photo/abstract-textured-backgound_1258-30506.jpg?t=st=1738309411~exp=1738313011~hmac=cc4a71e899e32ff4ed062c7bd811af3cc013a107c5bec145fe897cb02690d964&w=740');
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    justify-content: center; /* Centering content vertically */
    align-items: center; /* Centering content horizontally */
}

/* Message container */
.msg {
    /* margin-top: 30px; */
     width: 100%;
    background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent background */
    color: white;
    padding: 40px 0;
    text-align: center;
    margin-bottom: 30px; /* Space between message and main content */
}

.header-msg h2 {
    font-size: 2rem;
    font-weight: bold;
    margin: 0;
    padding: 0;
}

.slogan-msg h4 {
    font-size: 1.2rem;
    margin-top: 10px;
    line-height: 1.6;
    font-weight: 300;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    color:darkgoldenrod;
    font-weight: 500;
}

/* Full-container that holds everything */
.full-container {
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 20px;
    flex: 1; /* Allow it to expand to fill the remaining space */
    flex-direction: column;
    align-items: center;
}

/* Flex container to hold individual items */
.div-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px; /* Increased spacing between containers */
    justify-content: center;
    align-items: stretch;
    width: 100%;
    max-width: 1300px; /* Increased max width for more space */
}

/* Each individual container */
.individual-container {
    background-color:rgb(223, 197, 163);
    width: 32%; /* Slightly increased width for bigger containers */
    padding: 20px; /* More padding for bigger content */
    margin: 10px;
    border-radius: 8px; /* Rounded corners */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.individual-container:hover {
    transform: translateY(-15px); /* Lift effect */
    box-shadow: 0 10px 18px rgba(0, 0, 0, 0.4);
}

/* Header inside individual containers */
.header-div h3 {
    text-align: center;
    color: rgb(4, 30, 30);
    margin: 0;
    padding: 10px 0;
    font-size: 1.3rem; /* Increased font size for better visibility */
}


/* Image inside the photo-task */
.photo-task {
    background-color: rgb(229, 240, 240);
    padding: 10px;
    display: flex;
    justify-content: center;
}

.photo-task img {
    max-width: 100%; /* Make image responsive */
    height: auto;
    border-radius: 5px; /* Optional: Rounded image edges */
}

/* Description box style */
.decription {
    background-color: rgb(170, 167, 213);
    color: rgb(21, 5, 57);
    padding: 20px;
    flex-grow: 1; /* Make description box take up available space */
    text-align: center;
    font-size: 1rem; /* Increased font size for better readability */
}

/* Explore button style */
.explore {
    display: flex;
    justify-content: center;
    align-items: center;
    
    padding: 10px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}



/* Media Queries for responsiveness */

/* For smaller screens (mobile devices) */
@media (max-width: 768px) {
    .individual-container {
        width: 100%; /* Take full width on mobile */
    }
}

/* For medium to larger screens (tablet and desktop) */
@media (min-width: 768px) {
    .individual-container {
        width: 30%; /* 3 items per row */
    }
}

/* For large screens (large desktop) */
@media (min-width: 1200px) {
    .individual-container {
        width: 23%; /* 4 items per row */
    }
}
